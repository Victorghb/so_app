<% provide(:title, 'Home') %>
<!DOCTYPE html>
<html>
  <head>
    <title>Ruby on Rails SO App | <%= yield(:title) %></title>
  </head>
  
  <body>
  <% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>     
      </section>
    </aside>
    <div class="span8">
      <h3>Question Feed</h3>
      <%= render 'questions/question_all' %>
    </div>
  </div>
    <% else %>
      <h1>SO App</h1>
      <p>   
        <a href="/signin">Sign in</a> to use content or <a href="/signup">Create a new account</a>.
      </p>
    <% end %>
  </body>
</html>